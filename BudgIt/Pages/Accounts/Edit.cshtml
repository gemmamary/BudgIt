@page "{accountId:int}"
@model BudgIt.Pages.Accounts.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Editing @Model.Account.Name</h2>

<form method="post">
    <input type="hidden" asp-for="Account.Id" />
    <div class="form-group">
        <label asp-for="Account.Name"></label>
        <input asp-for="Account.Name" class="form-control" />

        <label asp-for="Account.Balance"></label>
        <input asp-for="Account.Balance" class="form-control" />

        <!-- asp-for automatically assumes you are using properties from the Model so Model.Account.Name can be shortened to Account.Name
        However, asp-items does not assume this, so keyword Model is needed to access the Accounts property here. -->
        <label asp-for="Account.AccountType"></label>
        <select class="form-control" asp-for="Account.AccountType" asp-items="Model.Accounts"  >

        </select>

    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>